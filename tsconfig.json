{
  "compilerOptions": {
    "target": "es5",                               
    "module": "ES2020",   
    "moduleResolution": "node",                       
    "strict": true,                                
    "noUnusedLocals": true,                     
    "noImplicitReturns": true,                 
    "esModuleInterop": true,                        
    "skipLibCheck": true,                           
    "forceConsistentCasingInFileNames": true,    
    "outDir": "dist",
    "declaration": true,
  },
  "include": [
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
